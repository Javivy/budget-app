<header class="bg-primary">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <%= link_to 'WalletWizard', authenticated_root_path, class: "-m-1.5 p-1.5 font-bold text-white text-3xl" %>
    </div>
    <div class="flex lg:hidden">
      <button onclick="openMenu()" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-white">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <% if user_signed_in? %>
      <div class="hidden lg:flex lg:gap-x-12">
        <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Features</a>
        <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Marketplace</a>
        <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Company</a>
      </div>
    <% end %>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <% if user_signed_in? %>
        <%= form_tag(destroy_user_session_path, method: :delete) do %>
          <%= submit_tag 'Log Out', class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50 cursor-pointer" %>
        <% end %>
      <% else %>
        <div class="flex gap-6">
          <%= link_to 'Log In', new_user_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-primary cursor-pointer transition-all" %>

          <%= link_to 'Sign Up', new_user_registration_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-primary cursor-pointer transition-all" %>
        </div>
      <% end %>
      <!-- <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %> -->
      <!-- <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Log in <span aria-hidden="true">&rarr;</span></a> -->
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="lg:hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10 hidden mobile-menu-container"></div>
    <div class="fixed hidden inset-y-0 right-0 z-10 mobile-menu w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <%= link_to 'WalletWizard', authenticated_root_path, class: "text-dark font-bold text-2xl" %>
        <button type="button" onclick="closeMenu()" class="-m-2.5 rounded-md p-2.5 text-gray-800">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 h-full">
        <div class="-my-6 divide-y divide-gray-500/30 flex flex-col justify-between h-full">
          <div class="space-y-2 py-6">
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-100">Features</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-100">Marketplace</a>
            <a href="#" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-100">Company</a>
          </div>
          <div class="py-6">
            <%= form_tag(destroy_user_session_path, method: :delete) do %>
              <%= submit_tag 'Logout', class: "block cursor-pointer w-full bg-gray-100 rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-200" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<script>
  const mobileMenu = document.querySelector('.mobile-menu');
  const mobileMenuContainer = document.querySelector('.mobile-menu-container');
  const openMenu = () => {
    mobileMenu.classList.remove('hidden');
    mobileMenuContainer.classList.remove('hidden');
  }

  const closeMenu = () => {
    mobileMenu.classList.add('hidden');
    mobileMenuContainer.classList.add('hidden');
  }
</script>