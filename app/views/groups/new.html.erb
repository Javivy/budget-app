<head>
  <%= stylesheet_link_tag 'devise/login_and_registration' %>
</head>
<body>
  <div class="flex h-full">
    <div class="w-1/2 h-full hidden md:block login-div">
      <!-- <%= image_tag 'login-bg.jpg', class: "h-full w-full" %> -->
    </div>
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 w-full md:w-1/2 lg:w-1/2">
      <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-dark">Create a new Category</h2>
      </div>
    
      <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    
        <div class="space-y-6" action="#" method="POST">
          <%= form_with(model: @group, url: groups_path) do |form| %>
            <div>
              <%= form.label :name, class: "block text-sm font-medium leading-6 text-dark" %>
              <%= form.text_field :name, required: true, class: "block mt-2 w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>

            <div class="mt-4">
              <div class="">
                <%= form.label :icon, class: "block text-sm font-medium leading-6 text-dark" %>
                <%= form.select :icon, %w[food entertainment education health_care housing personal_care], class: "mt-2" %>
              </div>
            </div>

            <div class="mt-4">
              <%= form.submit 'Create new Category', class: 'flex transition-all w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>