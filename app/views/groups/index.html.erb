<h1 class="text-3xl font-bold text-center text-dark m-2 lg:text-5xl md:text-5xl">Categories</h1>
<% if @categories.empty? %>
  <p class="border-2 p-2 m-6 rounded-sm text-center md:text-2xl lg:text-3xl text-gray-500">No categories created yet</p>
<% else %>
  <div class="m-4 p-4 border-4 rounded-sm">
    <% @categories.each_with_index do |category, index| %>
    <div class="border-2 p-2 my-4 rounded-sm flex justify-between <%= 'bg-gray-100' if index.even? %> ">
      <div class="flex flex-col w-12 md:w-14 lg:w-[4.5rem]">
        <h2 class="md:text-2xl lg:text-3xl font-bold text-primary border-b-2"><%= link_to category.name, category %></h2>
        <%= image_tag( "icons/#{category.icon}", class: 'w-full' )%>
      </div>
      <div class="flex flex-col justify-between text-right text-gray-500">
        <p>Transactions: <%= category.entities.count %></p>
        <p>
          <% @string = "#{category.created_at}" %>
          <% @time_object = Time.parse(@string) %>
          <%= @time_object.strftime('%d-%m-%Y') %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
<div class="flex justify-center pb-5">
  <%= link_to new_group_path, class: "group relative inline-block overflow-hidden rounded-2xl bg-[#24D035] hover:bg-[#27732f] transition-all duration-300 text-lg font-bold text-white p-3" do %>
    Create a new Category
  <% end %>
</div>
